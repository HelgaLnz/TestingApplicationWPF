<Window x:Class="ProjectWPF.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.View"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="350" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="200" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Authorization" Margin="15" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <StackPanel Orientation="Vertical" Margin="15" Grid.Row="1">
            <TextBlock Text="Login" />
            <TextBox x:Name="tbLogin" />
            <TextBlock Text="Password" />
            <PasswordBox x:Name="pbPassword" />
            <Button x:Name="btSignIn" Content="Sign In" Margin="10,50" Click="btSignIn_Click" />
        </StackPanel>
    </Grid>
</Window>